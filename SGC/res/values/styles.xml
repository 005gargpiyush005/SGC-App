<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <style name="Main_Home_Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:alpha" tools:targetApi="honeycomb">0.7</item>
        <item name="android:background">@drawable/mainscreen</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:textColor">#00F</item>
        <item name="android:textSize">25sp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="People_View_Left">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">#F3FF00</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">#FF7700</item>
        <item name="android:shadowDx">1.3</item>
        <item name="android:shadowRadius">0.8</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:ellipsize">none</item>
    </style>
    <style name="People_View_Right">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#84FF00</item>
        <item name="android:textSize">23sp</item>
        <item name="android:ellipsize">none</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="People_View_Row">
        <item name="android:weightSum">1</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:layout_marginBottom">11dp</item>
    </style>
    <style name="Event_Heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:ellipsize">none</item>
        <item name="android:shadowColor">#62FAA1</item>
        <item name="android:shadowDx">1.3</item>
        <item name="android:shadowRadius">0.8</item>
        <item name="android:shadowDy">1.3</item>
    </style>
    <style name="Event_des">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textColor">#FCBC31</item>
    </style>
    <style name="Event_Special_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#FFFB64</item>
        <item name="android:ellipsize">none</item>
        <item name="android:shadowColor">#31BFFC</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowRadius">0.8</item>
        <item name="android:shadowDy">1.0</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
</resources>